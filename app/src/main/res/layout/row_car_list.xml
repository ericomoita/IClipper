<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="0dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="4dp">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/verde"
        card_view:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="8dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:elevation="3dp"
        android:shadowColor="#F13000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1">

        <TextView
            android:id="@+id/txtOrigem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lgOrigem"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/lgOrigem"
            android:layout_toStartOf="@+id/antigo"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Father"
            android:textAlignment="textStart"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toRightOf="@+id/lgOrigem"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.021" />

        <TextView
            android:id="@+id/lgOrigem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtDestino"
            android:layout_alignLeft="@+id/lgDestino"
            android:layout_alignStart="@+id/lgDestino"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="9dp"
            android:text="En:"
            android:textStyle="bold"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lgDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtDestino"
            android:layout_marginBottom="29dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:text="Pt:"
            android:textColor="@color/cardview_shadow_start_color"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/txtDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Pai"
            android:textAlignment="textStart"
            android:textColor="@color/cardview_shadow_start_color"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toRightOf="@+id/lgDestino"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.843" />


        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="8dp"
            android:textSize="10sp"
            card_view:layout_constraintBottom_toTopOf="@+id/layoutDicionario"
            card_view:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/antigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:text="@string/ver_detalhes"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="invisible"
            card_view:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="735dp" />

        <LinearLayout
            android:id="@+id/layoutDicionario"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:background="@color/colorBackLight"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:text="TextView"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/dicionario1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <com.andexert.library.RippleView
            android:id="@+id/sound"

            rv_centered="true"
            android:layout_width="44dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/btFalar"
            android:layout_toStartOf="@+id/btFalar"
            android:clickable="true"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toRightOf="@+id/txtOrigem"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.0"
            card_view:rv_centered="true">

            <ImageButton

                android:id="@+id/text_view_details"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerInParent="true"

                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_volume_up_black_18dp" />

        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/notification"

            rv_centered="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@+id/btFalar"
            android:layout_toStartOf="@+id/btFalar"
            android:clickable="true"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintRight_toLeftOf="@+id/delete"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.029999971"
            card_view:rv_centered="true">

            <ToggleButton

                android:id="@+id/notificationIcon"
                style="@style/toggleButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:autoText="false"
                android:background="@drawable/notification" />

        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/delete"

            rv_centered="true"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:layout_toLeftOf="@+id/btFalar"
            android:layout_toStartOf="@+id/btFalar"
            android:clickable="true"
            android:gravity="right|end"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.033">

            <ImageButton

                android:id="@+id/deleteicon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"

                android:background="@android:color/transparent"
                android:src="@drawable/ic_delete_forever_black_24dp" />

        </com.andexert.library.RippleView>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

